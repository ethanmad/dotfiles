# Set paths
set my_cfgdir   = "$HOME/.config/mutt"
set my_cachedir = "$HOME/.config/mutt"
set mailcap_path = "$my_cfgdir/mailcap"
set header_cache      = "$my_cachedir/headers"
set tmpdir            = "$my_cachedir"

#  Receive mail
set imap_user = ethan@ethanmad.com
set imap_pass = ysnoxenqvmhoyflk
set folder = imaps://imap.gmail.com
set spoolfile = +INBOX
set imap_check_subscribed

# Store message headers locally to speed things up.
# If hcache is a folder, Mutt will create sub cache folders for each account which may speeds things up even more.
set header_cache = ~/.cache/mutt

# Store messages locally to speed things up, like searching message bodies.
# Can be the same folder as header_cache.
# This will cost important disk usage according to your e-mail amount.
set message_cachedir = "~/.cache/mutt"

# Specify where to save and/or look for postponed messages.
set postponed = +[Gmail]/Drafts

# Allow Mutt to open new imap connection automatically.
unset imap_passive

# Keep IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

# Send mail
set record = +Sent
unset record
set realname = 'Ethan Madison'
set from = ethan@ethanmad.com
set use_from = yes
set smtp_url = smtps://$imap_user:$imap_pass@smtp.gmail.com
set ssl_starttls = yes
set edit_headers = yes

# Use UTF-8 encoding
set send_charset="utf-8"

# Press a to archive message
macro index,pager a "<save-message>=[Gmail]/All <enter><enter>" "move to All Mail (archive)"

# Press R to reply-all
bind pager R group-reply

# Goobook tab completion for contacts
set query_command="goobook query %s"
#macro index,pager a "<pipe-message>goobook add<return>" "add sender to google contacts"
bind editor <Tab> complete-query

# Use neovim as the default editor for composing mail
set editor=nvim

# Set vi-like key bindings
bind pager j next-line
bind pager k previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

# 
# SORTING
#
set sort=threads
set sort_aux=last-date-received

#
# SIDEBAR
#

set sidebar_visible = yes
bind index,pager B sidebar-toggle-visible

# Ctrl-n, Ctrl-p to select next, previous folder.
# Ctrl-o to open selected folder.
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open
